{{ form_start(form) }}
<div id="post">
    <div class="form-group">
        <label class="control-label required" for="name">Name</label>
        {{ form_widget(form.name, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.name) }} 
    </div>
    <div class="form-group">
        <label class="control-label required" for="name">Description</label>
        {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
        {{ form_errors(form.description) }} 
    </div>               
    {% if entrada.tags %}
        <div class="form-group">
            <label class="control-label" for="tags">Etiquetas</label>    
            <div class="input-group">
                <div class="bootstrap-tagsinput">
                    {% for tag in entrada.tags %}
                        <span class="tag label label-info">{{ tag.tag }}</span>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}
</div>

<button type="submit" class="btn btn-primary">
    Guardar cambios
</button>
<a href="{{ path('site_index') }}" class="btn btn-link">
    Volver al listado de art√≠culos
</a>
{{ form_widget(form) }}
{{ form_end(form) }}
