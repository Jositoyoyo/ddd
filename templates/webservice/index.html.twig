{% extends 'base.html.twig' %}
{% block title %}
    Bienvenido/a a la aplicación
{% endblock %}
{% block body %}
    <div class="text-center">
        <div class="page-header">
            <h1>Bienvenido/a a la aplicación <strong>Webservice Yunbit</strong></h1>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="jumbotron">
                    <form action="{{ path('webservice_index')}}" method="POST">
                        <div class="form-group">
                            <input type="text" id="searchterms" name="searchterms" value="" class="form-control" placeholder="Introduce los terminos de busqueda. Ej : PROSEGUR">
                        </div>
                        <p>
                            <button class="btn btn-primary btn-lg">
                                Buscar
                            </button>
                        </p>
                    </form>
                </div>
            </div>
            <div class="col-sm-12">
                {% if resultado %}
                    <h3>Resultado de la busqueda</h3>
                    <table class="table table-striped table-middle-aligned">
                        {% for item in resultado %}
                            <tr>
                                <td class="text-left">
                                    {{ item.title }}
                                </td>
                                <td class="text-left">
                                    <a href="{{ item.url }}" target="_blank">{{ item.url }}</a>                                
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
